<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.HomeGym" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/blue</item>
        <!-- Customize your theme here. -->
        <item name="android:textViewStyle">@style/textStyle</item>
        <item name="android:buttonStyle">@style/buttonStyle</item>

    </style>

    <style name="textStyle" parent="android:Widget.TextView">
        <item name="fontFamily">@font/font</item>
    </style>

    <style name="buttonStyle" parent="android:Widget.Button">
        <item name="fontFamily">@font/font</item>
    </style>

    <style name="LaunchScreenStyle" parent="Theme.HomeGym">
        <item name="android:windowBackground">@drawable/launch</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowNoTitle">true</item>
    </style>
</resources>