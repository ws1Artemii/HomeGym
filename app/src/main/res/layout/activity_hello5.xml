<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HelloActivity.Hello5Activity"
    android:background="@color/blue">

    <TextView
        android:id="@+id/subtitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="170dp"
        android:text="How often do you exercise?"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="18sp"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="64dp"
        android:text="Step 5/5"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="50sp"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText android:id="@+id/height"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:textColor="@color/blue"
        android:background="@drawable/boxbutton_w"
        android:layout_marginHorizontal="24dp"
        android:hint="Height"
        android:textSize="24sp"
        android:paddingStart="32dp"
        app:layout_constraintTop_toBottomOf="@id/subtitle"
        android:layout_marginTop="75dp"
        android:inputType="number"/>

    <EditText android:id="@+id/weight"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:textColor="@color/blue"
        android:background="@drawable/boxbutton_w"
        android:layout_marginHorizontal="24dp"
        android:hint="Weight"
        android:textSize="24sp"
        android:paddingStart="32dp"
        app:layout_constraintTop_toBottomOf="@id/height"
        android:layout_marginTop="18dp"
        android:inputType="number"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/next"
        android:layout_width="match_parent"
        android:layout_height="77dp"
        android:layout_marginHorizontal="55.5dp"
        android:layout_marginBottom="91dp"
        android:background="@drawable/boxbutton_w"
        android:text="Next"
        android:textAlignment="center"
        android:textColor="@color/blue"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>