<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/blue"
    tools:context=".HelloActivity.Hello1Activity">

    <TextView
        android:id="@+id/subtitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="170dp"
        android:text="How often do you exercise?"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="18sp"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="64dp"
        android:text="Step 1/5"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="50sp"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintTop_toBottomOf="@id/subtitle"
        app:layout_constraintBottom_toBottomOf="parent">

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/welost"
            android:layout_width="match_parent"
            android:layout_height="77dp"
            android:layout_marginHorizontal="55.5dp"
            android:layout_marginBottom="29dp"
            android:background="@drawable/boxbutton_w"
            android:drawableLeft="@drawable/icwelost"
            android:paddingStart="24dp"
            android:text="   Weight Loss"
            android:textAlignment="viewStart"
            android:textColor="@color/blue"
            android:textSize="24sp" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/yoga"
            android:layout_width="match_parent"
            android:layout_height="77dp"
            android:layout_marginHorizontal="55.5dp"
            android:layout_marginBottom="29dp"
            android:background="@drawable/boxbutton_w"
            android:drawableLeft="@drawable/icyoga"
            android:paddingStart="24dp"
            android:text="   Keeping fit"
            android:textAlignment="viewStart"
            android:textColor="@color/blue"
            android:textSize="24sp" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/muscle"
            android:layout_width="match_parent"
            android:layout_height="77dp"
            android:layout_marginHorizontal="55.5dp"
            android:background="@drawable/boxbutton_w"
            android:drawableLeft="@drawable/icmuscle"
            android:paddingStart="24dp"
            android:text="   Build muscle"
            android:textAlignment="viewStart"
            android:textColor="@color/blue"
            android:textSize="24sp" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>