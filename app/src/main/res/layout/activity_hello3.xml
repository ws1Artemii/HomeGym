<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HelloActivity.Hello3Activity"
    android:background="@color/blue">


    <TextView
        android:id="@+id/subtitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="170dp"
        android:text="How often do you exercise?"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="18sp"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="64dp"
        android:text="Step 3/5"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="50sp"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:visibility="invisible"
        android:id="@+id/image"
        android:layout_width="152dp"
        android:layout_height="430dp"
        android:layout_marginBottom="16dp"
        android:scaleType="fitEnd"
        android:src="@drawable/female_image"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/subtitle"
        app:layout_constraintVertical_bias="1.0" />

    <androidx.appcompat.widget.AppCompatButton
        android:visibility="invisible"
        android:alpha="0"
        android:id="@+id/hands"
        android:layout_width="172dp"
        android:layout_height="46dp"
        android:layout_marginBottom="324dp"
        android:background="@drawable/boxbutton_w"
        android:text="Hands"
        android:textAlignment="center"
        android:textColor="@color/blue"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="@id/image"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="14dp"/>

    <RelativeLayout android:id="@+id/line_hands"
        android:visibility="invisible"
        android:alpha="0"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:background="@color/white"
        app:layout_constraintStart_toEndOf="@id/hands"
        app:layout_constraintTop_toTopOf="@id/hands"
        app:layout_constraintBottom_toBottomOf="@id/hands"
        app:layout_constraintEnd_toEndOf="@id/image"
        android:layout_marginEnd="78dp"/>

    <ImageView
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:src="@drawable/circle"
        app:layout_constraintTop_toTopOf="@id/line_hands"
        app:layout_constraintBottom_toBottomOf="@id/line_hands"
        app:layout_constraintStart_toEndOf="@id/line_hands"/>

    <androidx.appcompat.widget.AppCompatButton
        android:visibility="invisible"
        android:alpha="0"
        android:id="@+id/spine"
        android:layout_width="172dp"
        android:layout_height="46dp"
        android:layout_marginBottom="260dp"
        android:background="@drawable/boxbutton_w"
        android:text="Spine"
        android:textAlignment="center"
        android:textColor="@color/blue"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="@id/image"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="14dp"/>

    <RelativeLayout android:id="@+id/line_spine"
        android:visibility="invisible"
        android:alpha="0"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:background="@color/white"
        app:layout_constraintStart_toEndOf="@id/spine"
        app:layout_constraintTop_toTopOf="@id/spine"
        app:layout_constraintBottom_toBottomOf="@id/spine"
        app:layout_constraintEnd_toEndOf="@id/image"
        android:layout_marginEnd="50dp"/>

    <ImageView
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:src="@drawable/circle"
        app:layout_constraintTop_toTopOf="@id/line_spine"
        app:layout_constraintBottom_toBottomOf="@id/line_spine"
        app:layout_constraintStart_toEndOf="@id/line_spine"/>

    <androidx.appcompat.widget.AppCompatButton
        android:visibility="invisible"
        android:alpha="0"
        android:id="@+id/torso"
        android:layout_width="172dp"
        android:layout_height="46dp"
        android:layout_marginBottom="184dp"
        android:background="@drawable/boxbutton_w"
        android:text="Torso"
        android:textAlignment="center"
        android:textColor="@color/blue"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="@id/image"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="14dp"/>

    <RelativeLayout android:id="@+id/line_torso1"
        android:visibility="invisible"
        android:alpha="0"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:background="@color/white"
        app:layout_constraintStart_toEndOf="@id/torso"
        app:layout_constraintTop_toTopOf="@id/torso"
        app:layout_constraintBottom_toBottomOf="@id/torso"
        app:layout_constraintEnd_toEndOf="@id/image"
        android:layout_marginEnd="30dp"/>

    <RelativeLayout android:id="@+id/line_torso2"
        android:visibility="invisible"
        android:alpha="0"
        android:layout_width="1dp"
        android:layout_height="0dp"
        android:background="@color/white"
        app:layout_constraintStart_toEndOf="@id/line_torso1"
        app:layout_constraintTop_toTopOf="@id/image"
        app:layout_constraintBottom_toBottomOf="@id/line_torso1"
        app:layout_constraintEnd_toEndOf="@id/line_torso1"
        android:layout_marginTop="200dp"/>

    <ImageView
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:src="@drawable/circle"
        app:layout_constraintBottom_toTopOf="@id/line_torso2"
        app:layout_constraintStart_toStartOf="@id/line_torso2"
        app:layout_constraintEnd_toEndOf="@id/line_torso1"/>

    <androidx.appcompat.widget.AppCompatButton
        android:visibility="invisible"
        android:alpha="0"
        android:id="@+id/legs"
        android:layout_width="172dp"
        android:layout_height="46dp"
        android:layout_marginBottom="120dp"
        android:background="@drawable/boxbutton_w"
        android:text="Legs"
        android:textAlignment="center"
        android:textColor="@color/blue"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="@id/image"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="14dp"/>

    <RelativeLayout android:id="@+id/line_legs"
        android:visibility="invisible"
        android:alpha="0"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:background="@color/white"
        app:layout_constraintStart_toEndOf="@id/legs"
        app:layout_constraintTop_toTopOf="@id/legs"
        app:layout_constraintBottom_toBottomOf="@id/legs"
        app:layout_constraintEnd_toEndOf="@id/image"
        android:layout_marginEnd="80dp"/>

    <ImageView
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:src="@drawable/circle"
        app:layout_constraintTop_toTopOf="@id/line_legs"
        app:layout_constraintBottom_toBottomOf="@id/line_legs"
        app:layout_constraintStart_toEndOf="@id/line_legs"/>

</androidx.constraintlayout.widget.ConstraintLayout>